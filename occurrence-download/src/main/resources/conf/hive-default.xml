<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!--
    Use the Hive thrift metastore.
    TODO: this will change when we move to the Hive2 server and CDH5
  -->
  <property>
    <name>hive.metastore.local</name>
    <value>false</value>
  </property>
  <property>
    <name>hive.metastore.uris</name>
    <value>${hive.metastore.uris}</value>
  </property>

  <!--
    Enable HBase so we can create HBase backed tables.
    Note, requires HBase jars on the classpath.
  -->
  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>${zookeeper.quorum}</value>
  </property>

  <!-- Explicit, to allow us to debug query plans etc -->
  <property>
    <name>hive.exec.scratchdir</name>
    <value>/tmp/hive-occurrence.download</value>
  </property>

  <!--
    The following are to declare the hive output directory and set permissions explicitly, to enable it to be
    used with confidence in other parts of the workflow outside of Hive.
  -->
  <property>
    <name>hive.metastore.warehouse.dir</name>
    <value>${occurrence.download.hive.hdfs.out}</value>
  </property>
  <property>
    <name>hive.warehouse.subdir.inherit.perms</name>
    <value>true</value>
  </property>
  <property>
    <name>hive.metastore.execute.setugi</name>
    <value>true</value>
  </property>
</configuration>
