<workflow-app name="OccurrenceHDFSBuild-${occurrence.environment}" xmlns="uri:oozie:workflow:0.2">

  <start to="create_tables" />

  <action name="create_tables">
    <java>
      <job-tracker>${hadoop.jobtracker}</job-tracker>
      <name-node>${hdfs.namenode}</name-node>
      <job-xml>conf/hive-default.xml</job-xml>
      <main-class>org.gbif.occurrence.hive.DownloadTableHiveAction</main-class>
      <arg>${hive.server2}</arg>
      <arg>${hive.db}</arg>
      <arg>${hive.user}</arg>
      <arg>occurrence</arg>
      <arg>${hbase.table}</arg>
      <arg>${hdfs.namenode}/${artifactId}/${occurrence.environment}/lib/occurrence-hive-${project.version}.jar,${hdfs.namenode}/${artifactId}/${occurrence.environment}/lib/occurrence-common-${project.version}.jar,${hdfs.namenode}/${artifactId}/${occurrence.environment}/lib/gbif-api-${gbif-api.version}.jar</arg>
      <arg>${synctables}</arg>
    </java>

    <ok to="end" />
    <error to="kill" />
  </action>

  <kill name="kill">
    <message>Occurrence table generators failed:[${wf:errorMessage(wf:lastErrorNode())}]</message>
  </kill>

  <end name="end" />

</workflow-app>
